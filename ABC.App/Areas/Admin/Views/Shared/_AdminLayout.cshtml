@inject IOptions<AppSettings> Settings
<!DOCTYPE html>
<html class="h-100" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @(Settings.Value.Name)</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/lib/bootswatch/dist/yeti/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/lib/pagistrap/css/style.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/lib/bootstrap/dist/css/sticky-footer-navbar.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="~/lib/bootstrap/dist/js/color-modes.js"></script>
</head>
<body class="d-flex flex-column min-vh-100">
    <div class="te-sidenav ">@* te-active *@
        <div class="te-sidenav-content p-1 bg-dark bg-gradient shadow-sm">
            <!-- start sidenav content -->
            <div class="container-fluid text-center">
                <a class="fs-4 text-nowrap text-light text-decoration-none" href="/admin">
                    <i class="bi bi-bootstrap"></i> <span class="text-menu">Admin</span>
                </a>
            </div>
            <!-- divider-->
            <div class="border-top border-dark border-opacity-25 mt-3 mb-1">
            </div>
            <div class="nav nav-pills flex-column">
                @* <a class="nav-link text-nowrap bg-transparent text-light" href="/admin">
                    <i class="bi bi-house-door-fill"></i><span class="text-menu"> Admin</span>
                </a> *@
                <a class="nav-link text-nowrap bg-transparent text-light te-with-caret"
                   data-bs-toggle="collapse" href="#collapseDemo" role="button" aria-expanded="false"
                   aria-controls="collapseDemo">
                    <i class="bi bi-layers-fill"></i><span class="text-menu"> Reporting</span>
                </a>
                <div class="collapse pb-2" id="collapseDemo">
                    <a class="nav-link text-nowrap bg-transparent text-light" href="/admin/reporting">
                        <i class="bi bi-layout-text-window-reverse"></i>
                        <span class="text-menu"> Charts</span>
                    </a>
                </div>
                <a class="nav-link text-nowrap bg-transparent text-light" href="/admin">
                    <i class="bi bi-people"></i><span class="text-menu"> Users</span>
                </a>
            </div>
            <!-- end sidenav content -->
        </div>
    </div>

    <div class="te-out-sidenav pb-5">
        <!-- start main content -->
        <nav class="navbar navbar-expand sticky-top navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand te-toggle-sidenav" href="#">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                         class="bi bi-list" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                              d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
                    </svg>
                </a>

                <div class="d-flex">
                    @* <form class="my-auto pe-2">
                    <div class="input-group input-group-sm">
                    <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
                    </div>
                    </form>
                    <button type="button" class="btn btn-primary btn-sm mx-2 position-relative">
                    <i class="bi bi-bell-fill"></i>
                    <span class="position-absolute top-0 start-100 translate-middle p-2 bg-danger rounded-circle">
                    <span class="visually-hidden">Alerts</span>
                    </span>
                    </button>
                     <button type="button" class="btn btn-primary btn-sm mx-2 position-relative">
                    <i class="bi bi-envelope-fill"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    12
                    <span class="visually-hidden">unread messages</span>
                    </span>
                    </button> *@

                    <div class="btn-group">
                        <button type="button" class="btn btn-primary dropdown-toggle btn-sm mx-2"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-fill"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end bg-transparent p-0 border-0">
                            <div class="card shadow" style="width: 18rem;">
                                @* <img src="https://picsum.photos/300/100.webp" class="card-img-top" alt="Foto Sampul"> *@
                                <div class="card-body text-center position-relative">
                                    @* <img src="https://picsum.photos/100.webp"
                                    class="w-25 position-absolute translate-middle border border-light rounded-circle"
                                    alt="Foto Profil"> *@
                                    <h5 class="card-title mt-5">Title</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">SubTitle</h6>
                                    <p class="card-text">
                                        <a href="#" class="card-link">Link</a>
                                    </p>

                                    <div class="d-grid gap-2">
                                        <button type="button" class="btn btn-dark">
                                            <i class="bi bi-gear-fill"></i>
                                            Settings
                                        </button>
                                        <button type="button" class="btn btn-dark text-danger">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <div class="container mt-4 mb-5">
            @RenderBody()
        </div>
        <!-- end main content -->
    </div>
    <div class="te-out-sidenav mt-auto">
        <!-- start footer -->
        <footer class="footer py-3 border-top bg-gradient">
            <div class="container">
                <div class="row">
                    <div class="col-9 col-md-10 col-lg-11">
                        <span>&copy; 2024 - @(Settings.Value.Name)</span> <span class="float-end">v@(Settings.Value.Version) <span class="badge text-bg-light">@Settings.Value.Environment</span></span>
                    </div>
                    <div class="col-3 col-md-2 col-lg-1">
                        <form>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="darkSwitchCheckChecked">
                                <label class="form-check-label" for="darkSwitchCheckChecked">
                                    <i class="bi bi-moon-fill"></i>
                                </label>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end footer -->
    </div>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/pagistrap/js/script.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('show.te.sidenav', function (e) {
            console.log('show', e)
        });
        document.addEventListener('hide.te.sidenav', function (e) {
            console.log('hide', e)
        });

        if (window.innerWidth >= 992) {
            teSidenav.toggle();
        }

        //dark mode
        document.getElementById('darkSwitchCheckChecked').checked = (sessionStorage.teDark === 'dark')
        document.getElementById('darkSwitchCheckChecked').addEventListener('change', switchDark)
        function switchDark() {
            sessionStorage.teDark = document.getElementById('darkSwitchCheckChecked').checked ? 'dark' : 'light'
            document.getElementsByTagName('html')[0].dataset.bsTheme = sessionStorage.teDark
        }
        switchDark()
    </script>
    <script>
        (function () {
            'use strict';

            // if (window.innerWidth < 768 && teSidenav.isShow()) {
            //     teSidenav.toggle()
            // }
        })()
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
